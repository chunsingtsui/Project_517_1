<td></td>
<% Post.find_all_by_post_id(post.id).each do |comment| %>
<td><%= comment.content %>  <%= comment.depth %></td>
<td><%= Category.find(comment.category_id).name %></td>
<td><%= User.find(comment.user_id).username %></td>

<% if comment.post_id > 0 && Post.find_all_by_post_id(comment.post_id).count() > 0 %>
<tr>
<%= render "posts/comment", :post => Post.find(comment.post_id) %>
</tr>
<% end %>

<% end %>

