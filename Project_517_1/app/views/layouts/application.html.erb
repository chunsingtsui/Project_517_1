<!DOCTYPE html>
<html>
<head>
  <title>PostIt</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="log_in_out">
  <% if current_user %>
      <%= link_to "View Posts", posts_path %> |
      <%= link_to "Create a Post", create_a_post_path %> |
      <% if current_user.admin %>
          <%= link_to "Edit Categories", edit_categories_path %> |
          <%= link_to "Manage Users", manage_users_path %> |
      <% end %>
      Logged in as <%= current_user.username %>
      <%= link_to "Log Out", log_out_path %>
  <% else %>
      <%= link_to "View Posts", posts_path %> |
      <%= link_to "Log In", log_in_path %> |
      <%= link_to "Register", register_path %>
  <% end %>
  <span id="notice" class="message">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= notice %></span>
</div>

<%= yield %>

</body>
</html>
